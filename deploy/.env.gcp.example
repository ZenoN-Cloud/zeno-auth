# GCP Cloud Run Environment Variables
# Copy to .env.gcp and fill in your values

# GCP Project Configuration
PROJECT_ID=zeno-cy-dev-001
REGION=europe-west3
ZONE=europe-west3-a

# Cloud SQL Configuration
INSTANCE_ID=zeno-auth-db-dev
DB_NAME=zeno_auth
DB_USER=zeno_auth_app
DB_PASSWORD=<get-from-1password>
INSTANCE_CONNECTION_NAME=zeno-cy-dev-001:europe-west3:zeno-auth-db-dev

# Database URL (for Secret Manager)
# Format: postgres://user:password@/database?host=/cloudsql/connection-name&sslmode=disable
DATABASE_URL=postgres://zeno_auth_app:<password>@/zeno_auth?host=/cloudsql/zeno-cy-dev-001:europe-west3:zeno-auth-db-dev&sslmode=disable

# Cloud Run Service Configuration
SERVICE_NAME=zeno-auth-dev
REPO_NAME=zeno-auth

# Application Configuration
ENV=production
LOG_LEVEL=info
PORT=8080

# JWT Configuration (generate with: openssl genrsa -out private.pem 2048)
JWT_PRIVATE_KEY=<base64-encoded-private-key>
JWT_PUBLIC_KEY=<base64-encoded-public-key>
JWT_ACCESS_TOKEN_TTL=900
JWT_REFRESH_TOKEN_TTL=604800

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://app.zeno.cy,https://admin.zeno.cy

# Service Account
SERVICE_ACCOUNT=zeno-auth-sa@zeno-cy-dev-001.iam.gserviceaccount.com

# Resource Limits
MEMORY=512Mi
CPU=1
MAX_INSTANCES=10
MIN_INSTANCES=0
TIMEOUT=300

# Monitoring
ENABLE_METRICS=true
ENABLE_TRACING=false
